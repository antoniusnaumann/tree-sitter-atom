/// Comprehensive highlighting test

// Import statement
std::*

/// Struct with fields
+Point(x Float, y Float)

/// Enum with cases
+Result(T, E;
    Ok(T)
    Err(E)
)

/// Function with parameters
+add(a Int, b Int) Int {
    a + b;
}

/// Main function
main() {
    // Variable declaration
    x := 42
    
    // Constant declaration
    pi = 3.14159
    
    // Struct construction
    p := Point(x: 1.0, y: 2.0)
    
    // Field access
    x_val := p.x
    
    // Function call
    result := add(1, 2)
    
    // Loop statement
    loop (5) {
        io::print("Hello")
    }
    
    // Match statement
    match (result) {
        42 {
            io::print("Found it!")
        }
        _ {
            io::print("Not found")
        }
    }
}
